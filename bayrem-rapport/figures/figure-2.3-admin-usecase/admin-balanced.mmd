            end
        end
        
        %% Bottom section: Platform Operations
        subgraph BottomSection [" "]
            direction LR
            subgraph SystemGroup ["System Management"]
                Analytics("View Analytics")
                Reports("Generate Reports")
                Config("System Configuration")
            end
            
            subgraph MonitorGroup ["Monitoring & Support"]
                MonitorTrans("Monitor Transactions")
                Support("Handle Support Tickets")
